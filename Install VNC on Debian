sudo apt update
wget https://download.mozilla.org/?product=firefox-latest-ssl&os=linux64&lang=en-US
sudo apt install -y lxqt tigervnc-standalone-server dbus-x11 openbox nodejs git
git clone https://github.com/novnc/noVNC.git
vncserver :1
vncserver -kill :1
cat > ~/.vnc/xstartup <<'EOF'
#!/bin/sh
unset SESSION_MANAGER
unset DBUS_SESSION_BUS_ADDRESS
export XKL_XMODMAP_DISABLE=1
export DISPLAY=:1
exec startlxqt
EOF
chmod +x ~/.vnc/xstartup
cat > run_vnc.sh << 'EOF'
vncserver :1
./noVNC/utils/novnc_proxy --vnc localhost:5901 --listen 6080
EOF
chmod +x run_vnc.sh
./run_vnc.sh
