sudo apt update
sudo apt install -y lxqt tigervnc-standalone-server dbus-x11 openbox
git clone https://github.com/novnc/noVNC.git
vncpasswd
vncserver :1
vncserver -kill :1
cat > ~/.vnc/xstartup <<'EOF'
#!/bin/sh
unset SESSION_MANAGER
unset DBUS_SESSION_BUS_ADDRESS
export XKL_XMODMAP_DISABLE=1
export DISPLAY=:1
startlxqt &
EOF
chmod +x ~/.vnc/xstartup
vncserver :1
cd ~/noVNC/utils/
sudo ./novnc_proxy --listen 6080 --vnc localhost:5901
