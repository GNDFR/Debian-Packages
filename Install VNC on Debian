deb [signed-by=/usr/share/keyrings/firefox-archive-keyring.gpg] https://packages.mozilla.org/apt mozilla main
wget -q -O - https://packages.mozilla.org/apt/mozilla.gpg | gpg --dearmor | sudo tee /usr/share/keyrings/firefox-archive-keyring.gpg > /dev/null
sudo mkdir -p --mode=0755 /usr/share/keyrings
curl -fsSL https://pkg.cloudflare.com/cloudflare-main.gpg | sudo tee /usr/share/keyrings/cloudflare-main.gpg >/dev/null
echo 'deb [signed-by=/usr/share/keyrings/cloudflare-main.gpg] https://pkg.cloudflare.com/cloudflared any main' | sudo tee /etc/apt/sources.list.d/cloudflared.list
sudo apt update
sudo apt install -y lxqt tigervnc-standalone-server dbus-x11 firefox openbox cloudflared
vncpasswd
vncserver :1
vncserver -kill :1
cat > ~/.vnc/xstartup <<'EOF'
#!/bin/sh
unset SESSION_MANAGER
unset DBUS_SESSION_BUS_ADDRESS
export XKL_XMODMAP_DISABLE=1
export DISPLAY=:1
exec startlxqt
EOF
chmod +x ~/.vnc/xstartup
vncserver :1
ssh -R 5901:localhost:5901 localhost.run
