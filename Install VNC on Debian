deb [signed-by=/usr/share/keyrings/firefox-archive-keyring.gpg] https://packages.mozilla.org/apt mozilla main
wget -q -O - https://packages.mozilla.org/apt/mozilla.gpg | gpg --dearmor | sudo tee /usr/share/keyrings/firefox-archive-keyring.gpg > /dev/null
sudo apt update
sudo apt install -y lxqt tigervnc-standalone-server dbus-x11 firefox openbox
# VNC 서버 실행 후 종료하여 초기화
vncserver :1
vncserver -kill :1
cat > ~/.vnc/xstartup <<'EOF'
#!/bin/sh
unset SESSION_MANAGER
unset DBUS_SESSION_BUS_ADDRESS
export XKL_XMODMAP_DISABLE=1
export DISPLAY=:1
exec startlxqt
EOF
chmod +x ~/.vnc/xstartup
chmod +x ~/.vnc/xstartup
sudo mkdir -p --mode=0755 /usr/share/keyrings
