sudo apt update
sudo apt install -y lxqt tigervnc-standalone-server dbus-x11 openbox
git clone https://github.com/novnc/noVNC.git
vncpasswd
vncserver :1
vncserver -kill :1
cat > ~/.vnc/xstartup <<'EOF'
#!/bin/sh
unset SESSION_MANAGER
unset DBUS_SESSION_BUS_ADDRESS
export XKL_XMODMAP_DISABLE=1
export DISPLAY=:1
exec startlxqt
EOF
chmod +x ~/.vnc/xstartup
wget -O run_vnc.sh https://raw.githubusercontent.com/GNDFR/Debian-Packages/refs/heads/main/Run/Run%20VNC%20on%20Debian
chmod +x run_vnc.sh
./run_vnc.sh
