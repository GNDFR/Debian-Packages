sudo apt update
sudo apt install -y lxqt tigervnc-standalone-server dbus-x11 openbox novnc websockify
vncpasswd
vncserver :1
vncserver -kill :1
cat > ~/.vnc/xstartup <<'EOF'
#!/bin/sh
unset SESSION_MANAGER
unset DBUS_SESSION_BUS_ADDRESS
export XKL_XMODMAP_DISABLE=1
export DISPLAY=:1
exec startlxqt
EOF
chmod +x ~/.vnc/xstartup
vncserver :1
sudo /usr/share/novnc/utils/launch.sh --listen 6080 --vnc localhost:5901
sudo ssh -R 80:localhost:6080 localhost.run
